@model BartenderService.ViewModels.OrderCreateViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Cocktails</label>
        <select asp-for="SelectedCocktailIds" class = "form-select"multiple asp-items="Model.AvailableCocktails">
        </select>
        <span asp-validation-for="SelectedCocktailIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
